

// ----- Création d'articles ---- 

Electromenager frigo = new Electromenager ("réfrigérateur", 200, 349.9);
    System.out.prinln(frigo.getQteStock()); 
    // vérifier que les valeurs par défaut sont bien reprises dans le super des sous-classes, même sans explicitation

Electromenager four = new Electromenager ("four", 170, 259.9);
Electromenager blender = new Electromenager ("four", 50, 103.5);

Habit pantalon = new Habit("pantalon", 7.0, 20.0) ;
Habit robe = new Habit("robe", 10.0, 49.0) ;
Habit écharpe = new Habit("écharpe", 5.0, 10.0) ;

Primeur banane = new Primeur("banane", 0.23, 1.3);
Primeur peche = new Primeur("peche", 1.52, 3.90);

ArrayList<Article> articlesLidl = new Arraylist<Article>();
  articlesLidl.append(frigo);
  articlesLidl.append(blender);
  articlesLidl.append(pantalon);
  articlesLidl.append(robe);
  articlesLidl.append(banane);
  articlesLidl.append(peche);

Magasin lidl = new Magasin ("lidl", "marseille canebière",7,3059.63, articlesLidl),

System.out.println(lidl.enVente(four)); // false par défaut pour le boolean enVente? 
System.out.println(lidl.envente(peche));

System.out.println(lidl.indexArticle("robe"));

lidl.achat(frigo,5);
System.out.println(lidl.articleMagasin(frigo).getQteStock());
lidl.achat(frigo,5.5); // message d'erreur normalement
lidl.achat(robe,5.5); // même message d'erreur? 
lidl.achat(banane,6.0); // erreur? 
System.out.println(lidl.articleMagasin(banane).getQteStock());
System.out.println(lidl.articleMagasin(banane).enStock());

lidl.achat(banane,6); // erreur?
System.out.println(lidl.articleMagasin(banane).getQteStock());

// vérifier si articlesLidl et lidl.getArticlesVendus ont subi la même modification de quantités
 
for(Article art : articlesLidl){ 
				System.print.ln(art.getNom() + "," + art.getQteStock());
		}
    
for(Article art : lidl.getArticlesVendus){ 
				System.print.ln(art.getNom() + "," + art.getQteStock());
		}
    
 
 lidl.achat(frigo,1000); // message erreur normalement
 lidl.achat(four,2); // message erreur, four pas en vente




